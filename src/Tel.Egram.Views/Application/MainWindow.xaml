<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:application="clr-namespace:Tel.Egram.Views.Application"
    xmlns:authentication="clr-namespace:Tel.Egram.Views.Authentication"
    xmlns:workspace="clr-namespace:Tel.Egram.Views.Workspace"
    xmlns:startup="clr-namespace:Tel.Egram.Views.Startup"
    xmlns:popups="clr-namespace:Tel.Egram.Views.Popups"
    Width="800"
    Height="600"
    MinWidth="800"
    MinHeight="600"
    MaxWidth="800"
    MaxHeight="600"
    Title="{Binding WindowTitle}"
    Background="#ffffff"
    x:Class="Tel.Egram.Views.Application.MainWindow"
    >
    
    <Panel>
    
        <Carousel
            SelectedIndex="{Binding PageIndex}">
        
            <startup:StartupControl
                DataContext="{Binding StartupModel}" />
        
            <authentication:AuthenticationControl
                DataContext="{Binding AuthenticationModel}" />
        
            <workspace:WorkspaceControl
                DataContext="{Binding WorkspaceModel}" />
        
        </Carousel>

        <TextBlock
            IsVisible="False"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Text="{Binding ConnectionState}" />

        <popups:PopupControl
            IsVisible="{Binding IsVisible}"
            DataContext="{Binding PopupModel}" />

    </Panel>
    
</Window>